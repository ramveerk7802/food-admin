<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AddItemActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Add Item"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                app:fontFamily="@font/yeon_sung_regular"
                android:letterSpacing="0.05"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toTopOf="@id/constraint"
                app:layout_constraintStart_toStartOf="@id/constraint"
                app:layout_constraintEnd_toEndOf="@id/constraint"
                android:layout_marginTop="20dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/itemNameLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/text"
                app:layout_constraintEnd_toEndOf="@id/text"
                app:layout_constraintTop_toBottomOf="@id/text"
                android:hint="Item Name">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/itemName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:fontFamily="@font/lato_regular"
                    android:letterSpacing="0.05"
                    android:textColor="@color/black"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/itemPriceLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@id/itemNameLayout"
                app:layout_constraintEnd_toEndOf="@id/itemNameLayout"
                app:layout_constraintTop_toBottomOf="@id/itemNameLayout"
                android:hint="Item Price">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/itemPrice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:fontFamily="@font/lato_regular"
                    android:textColor="@color/black"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/itemPriceLayout"
                app:layout_constraintEnd_toEndOf="@id/itemPriceLayout"
                app:layout_constraintStart_toStartOf="@id/itemPriceLayout"
                android:text="Click on Image for Item"
                app:fontFamily="@font/lato_regular"
                android:letterSpacing="0.05"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textStyle="italic"
                android:textAlignment="center"
                android:drawableEnd="@drawable/plus_circle"/>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewItemImage"
                android:layout_width="0dp"
                android:layout_height="220dp"
                app:cardElevation="1dp"
                app:layout_constraintStart_toStartOf="@id/text2"
                app:layout_constraintEnd_toEndOf="@id/text2"
                app:layout_constraintTop_toBottomOf="@id/text2"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="20dp">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/itemImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/addimag"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/shortTextLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/cardViewItemImage"
                app:layout_constraintEnd_toEndOf="@id/cardViewItemImage"
                app:layout_constraintTop_toBottomOf="@id/cardViewItemImage"
                android:hint="Short Discription"
                android:layout_marginTop="5dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/shortDescEdtText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:fontFamily="@font/lato_regular"
                android:letterSpacing="0.05" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/addButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD"
                android:textAlignment="center"
                android:fontFamily="@font/lato_regular"
                android:letterSpacing="0.05"
                app:backgroundTint="@color/green2"
                app:layout_constraintStart_toStartOf="@id/shortTextLayout"
                app:layout_constraintEnd_toEndOf="@id/shortTextLayout"
                app:layout_constraintTop_toBottomOf="@id/shortTextLayout"
                android:layout_marginTop="30dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>