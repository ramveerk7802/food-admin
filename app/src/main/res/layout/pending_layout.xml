<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="1dp"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/itemImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/salad_banner_a"
            app:layout_constraintStart_toStartOf="@id/constraint"
            app:layout_constraintBottom_toBottomOf="@id/constraint"
            app:layout_constraintTop_toTopOf="@id/constraint"
            app:shapeAppearanceOverlay="@style/customShape"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:strokeColor="@color/grey"
            app:strokeWidth="1dp"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/customerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_max="110dp"
            android:hint="Customer Name"
            android:maxLines="2"
            android:textSize="14sp"
            app:fontFamily="@font/lato_regular"
            android:letterSpacing="0.05"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toTopOf="@+id/quantText"
            app:layout_constraintTop_toTopOf="@id/constraint"
            app:layout_constraintStart_toEndOf="@id/itemImage"
            android:layout_marginStart="10dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/quantText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Qunatity :"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:fontFamily="@font/lato_regular"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="@id/constraint"
            app:layout_constraintStart_toEndOf="@id/itemImage"
            app:layout_constraintTop_toBottomOf="@id/customerName"
            app:layout_constraintVertical_bias="0.764" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/quantityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/quantText"
            app:layout_constraintBottom_toBottomOf="@id/quantText"
            app:layout_constraintStart_toEndOf="@id/quantText"
            android:layout_marginStart="5dp"
            android:text="20"/>



            <com.google.android.material.button.MaterialButton
                android:id="@+id/orderAcceptButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                app:backgroundTint="@color/green2"
                android:text="Accept"
                app:layout_constraintTop_toTopOf="@id/constraint"
                app:layout_constraintEnd_toEndOf="@id/constraint"
                app:layout_constraintBottom_toBottomOf="@id/constraint"
                android:layout_marginEnd="10dp"

                />





    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>